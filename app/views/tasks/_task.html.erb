<div class="task">
  <% if @current_user == task.user %>
    <div class="task-actions">
      <%= link_to edit_task_path(task) do %>
        <%= fa_icon 'pencil' %>
      <% end %>

      <%= link_to "/tasks/#{task.id}", method: :delete, data: { confirm: 'Are you sure?' }  do %>
        <%= fa_icon 'times' %>
      <% end %>
    </div>
  <% end %>



  <%= link_to task_path(task), class: 'show-task-link' do %>
    <label>Task:</label>
    <p class='task-description'><%= task.description %></p>

    <label>Complete:</label>
    <% if task.is_complete %>
      <%= fa_icon 'check' %>
    <% else %>
      <%= fa_icon 'times' %>
    <% end %>
  <% end %>
    <h5 class='task-user-name'>
    Created by: <%= task.user.name %>
  </h5>
</div>
